// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clerkId   String   @unique
  email     String   @unique
  firstName String   @default("first")
  lastName  String   @default("last")

  role UserRole @default(USER)

  assignments Assignment[]
}

enum UserRole {
  ADMIN
  USER
}

model Exercise {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String @unique
  video       String @default("push-up-video")
  image       String @default("push-up-image")
  description String @default("3 sets | 10 reps | 30 secs rest")
  sets        String @default("3")
  work        String @default("10 reps")

  templates Template[]
}

model Template {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercises Exercise[]

  name       String       @unique
  Assignment Assignment[]
}

model Assignment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  templateId String
  template   Template @relation(fields: [templateId], references: [id])

  name String @unique

  @@index([userId, templateId])
}
